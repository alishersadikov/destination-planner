<div class="container">
  <p id="notice"><%= notice %></p>

  <h3>
    <%= @destination.name %>
  </h3>

  <p>
    <strong>Zip:</strong>
    <%= @destination.zip %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @destination.description %>
  </p>

  <%= image_tag(@destination.image_url) %>

  <div class="row">
    <h4>Forecast for <%= @destination.name %>:</h4>
    <% @forecasts.each do |forecast| %>
    <div class="col-md-6">

      <table class="table">
        <tr>
          <th>Date:</th>
          <th>High:</th>
          <th>Low:</th>
          <th>Conditions:</th>
        </tr>
        <tr>
          <td><%= forecast.date %></td>
          <td><%= forecast.high %></td>
          <td><%= forecast.low %></td>
          <td><%= forecast.conditions %></td>
        </tr>
      <% end %>
    </table>
  </div>
  </div>

  <div class="row">
    <%= link_to 'Edit', edit_destination_path(@destination) %> |
    <%= link_to 'Back', destinations_path %>
  </div>
</div>
